<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Pokedex" parent="Theme.Material3.DayNight.NoActionBar">
    </style>

    <style name="Theme.Pokedex" parent="Base.Theme.Pokedex" />

    <style name="ToolbarTitleTextAppearance">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">17.5sp</item>
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="TitleTextAppearance">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/Medium</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TypeTextAppearance">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="TextResumeAppearance">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/Medium</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextLabelStatAppearance">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/Medium</item>
    </style>

    <style name="TextNumberAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">top|end</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@color/Medium</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="TextNameAppearance">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:layout_gravity">center_horizontal|bottom</item>
        <item name="android:elevation">2dp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textStyle">bold</item>
    </style>



    <style name="TextStatAppearance">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/Medium</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextLabelAppearance">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/Medium</item>
    </style>

    <style name="myPopupTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- SUBMENU -->
        <item name="android:textColor">@color/White</item>
        <item name="android:backgroundTint">@color/primary</item>
    </style>
</resources>